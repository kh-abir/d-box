<div id="error_explanation">
  <%= flash[:delete_order] %>
</div>

<div>

  <div id="user-activity" class="card col-xl-8 col-xxl-8 col-lg-12 col-md-12">
    <div class="card-header">
      <h4 class="card-title">Orders</h4>
      <div class="card-action">
        <ul class="nav nav-tabs" role="tablist">
          <li class="nav-item">
            <a class="nav-link active viewSwitch" data-toggle="tab" href="#day" role="tab">
              Day
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link viewSwitch" data-toggle="tab" href="#week" role="tab">
              Week
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link viewSwitch" data-toggle="tab" href="#month" role="tab">
              Month
            </a>
          </li>
        </ul>
      </div>
    </div>
    <div class="card-body">
      <div class="tab-content mt-5" id="myTabContent">
        <div id="day">
          <%= area_chart FinalOrder.group_by_day(:created_at).count %>
        </div>
        <div id="week">
          <%= area_chart FinalOrder.group_by_week(:created_at).count %>
        </div>
        <div id="month">
          <%= area_chart FinalOrder.group_by_month(:created_at).count %>
        </div>
      </div>
    </div>
  </div>


  <div class="card">
    <div class="card-header">
      <h4 class="card-title" style="display: flex"><i class="fas fa-shopping-bag"></i> &nbsp;Recent Orders</h4>
    </div>
    <div class="card-body">
      <div class="table-responsive recentOrderTable">
        <table class="table verticle-middle table-responsive-md">
          <thead>
          <tr>
            <th scope="col">Order Id</th>
            <th scope="col">Customer Name</th>
            <th scope="col">Status</th>
            <th scope="col">Total</th>
            <th scope="col">Action</th>
          </tr>
          </thead>
          <tbody>

          <% @final_orders.reverse_each do |order| %>
            <td><%= order.id %></td>
            <td><%= order.user.first_name %> <%= order.user.last_name %></td>
            <td>Delivered</td>

            <td><%= order.total %></td>
            <td>
              <%= link_to(:action => 'new', :controller => "products") do %>
                <i class="fas fa-edit" title="Edit"></i>
              <% end %>
              |
              <%= link_to orders_path(order), method: :delete, data: {confirm: 'Are you sure? All the details of the order will be also deleted'} do %>
                <i class="fas fa-trash-alt" title="Delete"></i>
              <% end %>
            </td>
            </tr>
          <% end %>

          <tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>