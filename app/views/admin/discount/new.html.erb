<div class="content">
  <div class="col-xl-12 col-xxl-12 col-lg-12 col-md-12">
    <div class="card">
      <div class="form-row">
        <div class="form-group col-md-12" style="text-align: center;">
          <h1 class="discount_head" style="color: #0c5460">Set Discount for:</h1>
          <div class="cat_discount_btn"><b>Category</b></div>
          <div class="prod_discount_btn"><b>Product</b></div>
          <hr>
        </div>
      </div>

      <div class="select_category">
        <%= form_for @discount, url: admin_discount_index_path, method: :post do |f| %>
          <div class="form-row">
            <div class="form-group col-md-6">
              <%= f.hidden_field :discountable_type, value: "Category" %>
              <%= f.collection_select :discountable_id, Category.order('title ASC'), :id, :title, {prompt: "Select a Category"}, class: 'form-control' %>
            </div>
          </div>
          <br>

          <div class="form-row">
            <div class="form-group col-md-6">
              <div class="discount_radio">
                <b><%= f.label :discount_type %>:</b> <br>
                <%= f.radio_button(:discount_type, "Percent") %>
                <%= label(:discount_type, "Percent Off") %>&nbsp &nbsp
                <%= f.radio_button :discount_type, 'Fixed' %>
                <%= label(:discount_type, "Fixed Amount") %>
              </div>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-md-6">
              <%= f.label :amount %>:
              <%= f.number_field :amount, min: 1, class: 'form-control' %>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-md-6">
              <%= f.label :valid_from %>:
              <%= f.datetime_field :valid_from, class: 'form-control' %>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-md-6">
              <%= f.label :valid_till %>:
              <%= f.datetime_field :valid_till, class: 'form-control'%>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-12">
              <%= f.submit 'Set Discount', class: 'btn btn-info', style:'width:50%;'%>
            </div>
            <div class="form-group col-md-12">
              <%= link_to  'Cancel', :back, class: 'btn btn-danger', style:'width:50%;'%>
            </div>
          </div>
        <% end %>
      </div>

      <div class="select_product">
        <%= form_for @discount, url: admin_discount_index_path, method: :post do |f| %>
          <div class="form-row">
            <div class="form-group col-md-6">
              <%= f.hidden_field :discountable_type, value: "Product" %>
              <%= f.collection_select :discountable_id, Product.order('title ASC'), :id, :title, {prompt: "Select a Product"}, class: 'form-control' %>
            </div>
          </div>
          <br>

          <div class="form-row">
            <div class="form-group col-md-6">
              <div class="discount_radio">
                <b><%= f.label :discount_type %>:</b> <br>
                <%= f.radio_button(:discount_type, "Percent") %>
                <%= label(:discount_type, "Percent Off") %>&nbsp &nbsp
                <%= f.radio_button :discount_type, 'Fixed' %>
                <%= label(:discount_type, "Fixed Amount") %>
              </div>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-md-6">
              <%= f.label :amount %>:
              <%= f.number_field :amount, min: 1, class: 'form-control' %>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-md-6">
              <%= f.label :valid_from %>:
              <%= f.datetime_field :valid_from, class: 'form-control' %>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-md-6">
              <%= f.label :valid_till %>:
              <%= f.datetime_field :valid_till, class: 'form-control'%>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-md-12">
              <%= f.submit 'Set Discount', class: 'btn btn-info', style:'width:50%;'%>
            </div>
            <div class="form-group col-md-12">
              <%= link_to  'Cancel', :back, class: 'btn btn-danger', style:'width:50%;'%>
            </div>
          </div>
      <% end %>
      </div>
    </div>
  </div>
</div>

