<div class="content">
  <div class="col-xl-12 col-xxl-12 col-lg-12 col-md-12">
    <div id="user-activity" class="card">
      <div class="card-header">
        <h5>Revenue</h5> <br>
      </div>
      <div class="row">
        <div class="col-md-4">
          <div class="widget-stat card">
            <div class="card-body">
              <div class="media ai-icon">
            <span class="mr-3">
              <i class="fas fa-money-bill-wave"></i>
            </span>
                <p class="mb-1">Today</p>
              </div>
            </div>
            <div>
              <h4 align="center" class="bdt"><%= FinalOrderedItem.to_day.sum(:subtotal) - FinalOrderedItem.to_day.sum(:purchase_price) %></h4>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="widget-stat card">
            <div class="card-body">
              <div class="media ai-icon">
            <span class="mr-3">
              <i class="fas fa-money-bill-wave"></i>
            </span>
                <p class="mb-1">This Month</p>
              </div>
            </div>
            <div class="media-body">
              <h4 align="center" class="bdt"><%= FinalOrderedItem.this_month.sum(:subtotal) - FinalOrderedItem.this_month.sum(:purchase_price) %></h4>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="widget-stat card">
            <div class="card-body">
              <div class="media ai-icon">
             <span class="mr-3">
              <i class="fas fa-money-bill-wave"></i>
            </span>
                <p class="mb-1">This Year</p>
              </div>
            </div>
            <div class="media-body">
              <h4 align="center" class="bdt"><%= FinalOrderedItem.this_year.sum(:subtotal) - FinalOrderedItem.this_year.sum(:purchase_price) %></h4>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>


  <div class="row">
    <div class="col-xl-6 col-xxl-6 col-lg-6 col-md-12">
      <div id="user-activity" class="card">
        <div class="card-header">
          <h5>Top Sold Products</h5> <br>
          <div class="card-action">
            <ul class="nav nav-tabs" role="tablist">
              <li class="nav-item">
                <a class="nav-link active viewSwitch" data-toggle="tab" href="#day" role="tab">
                  Day
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link viewSwitch" data-toggle="tab" href="#week" role="tab">
                  Week
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link viewSwitch" data-toggle="tab" href="#month" role="tab">
                  Month
                </a>
              </li>
            </ul>
          </div>
        </div>

        <div class="card-body">
          <div class="tab-content mt-5" id="myTabContent">
            <div id="day">
              <%= column_chart @today_top_twenty_product %>
            </div>
            <div id="week">
              <%= column_chart @this_week_top_twenty_product %>
            </div>
            <div id="month">
              <%= column_chart @this_month_top_twenty_product %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-xl-6 col-xxl-6 col-lg-6 col-md-12">
      <div id="user-activity" class="card">
        <div class="card-header">
          <h5>This Month Top Sold Products</h5> <br>
        </div>
        <div>
          <ol>
            <% @this_month_top_twenty_product.each do |product| %>
              <li><%= product.first %></li>
            <% end %>
          </ol>
        </div>
      </div>
    </div>
  </div>
</div>


