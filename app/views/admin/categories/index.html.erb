<div class="content">
  <%#= render 'admin/products/search_form' %>
  <div class="row custom-width">
    <div id="user-activity" class="col-xl-12 col-xxl-12 col-lg-12 col-md-12">
      <div class="card">
        <div class="card-header">
          <div class="row">
            <div class="col-6">
              <h4 class="card-title" style="display: flex"><i class="fas fa-shopping-bag"></i>All Categories</h4>
            </div>
            <div class="col-6">
              <%= link_to '+ Add Category', new_admin_category_path, class: "btn btn-primary float-right" %>
            </div>
          </div>
        </div>

        <div class="card-body">
          <div class="table-responsive recentOrderTable">
            <table class="table table-responsive-md table-bordered table-striped table-hover">
              <thead>
              <tr>
                <th scope="col">Category Name</th>
                <th scope="col">Action</th>
              </tr>
              </thead>
              <tbody>
              <% @categories.each do |category| %>
                <tr>
                  <td><%= category.title %></td>
                  <td>
                    <%= link_to admin_category_path(category) do %>
                      <i class="fas fa-eye" title="Show SubCategories"></i>
                    <% end %>
                    |
                    <%= link_to new_admin_category_sub_category_path(category) do %>
                      <i class="fas fa-plus" title="Add SubCategory"></i>
                    <% end %>
                    |
                    <%= link_to edit_admin_category_path(category) do %>
                      <i class="fas fa-edit" title="Edit Category"></i>
                    <% end %>
                    |
                    <%= link_to admin_category_path(category), method: :delete, data: { confirm: 'Are you sure?' } do %>
                      <i class="fas fa-trash-alt" title="Delete Category"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="digg_pagination apple_pagination">
        <div class="page_info">
          <%= page_entries_info @categories, model: 'Category' %>
        </div>
        <%= will_paginate @categories, :container => false %>
      </div>
    </div>
  </div>
</div>
