<div class="content">
  <h1>Editing Subcategory</h1>

  <%= form_for(@sub_category, url: category_sub_category_path, method: :patch) do |form| %>

    <div class="field form-group ">
      <%= form.text_field :title, class: "form-control", placeholder: "Subcategory Title..."%>
    </div>

    <div class="actions form-group">
      <%= form.submit class: "btn btn-success"%>
    </div>
  <% end %>

  <%= link_to 'Back', :back,  class: "btn btn-info" %>
</div>
