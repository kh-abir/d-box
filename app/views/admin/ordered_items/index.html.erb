<div class="content">
  <% if @ordered_items.count == 0 %>
    <h3 align="center">This Order Has No Product</h3>
  <% else %>
    <div class="container" style="border: solid thin moccasin;" id="print-bill">
      <h3 align="center">Invoice</h3>
      <hr>
      <div class="margin-top-40">
        <div class="row font-18">
          <div class="col-md-9">
            <b>Name:</b> <%= @user_address.full_name %>
          </div>
          <div class="col-md-3">
            <b>Invoice ID:</b> <%= @order.id %>
          </div>
        </div>

        <div class="row font-18">
          <div class="col-md-9">
            <b>Address:</b> <%= @user.address %>
          </div>
          <div class="col-md-3">
            <b>Invoice Date:</b> <%= @order.created_at.strftime("%d/%m/%Y") %>
          </div>
        </div>

        <div class="row font-18">
          <div class="col-md-9">
            <b>Email:</b> <%= @user_address.email %>
          </div>
          <div class="col-md-3">
            <b>Payment:</b> <%= @user_address.payment_option %>
          </div>
        </div>

        <div class="row font-18">
          <div class="col-md-12">
            <b>Phone:</b> <%= @user_address.phone %>
          </div>
        </div>
      </div>

      <div class="margin-top-50">
        <h4 align="center">Ordered Items</h4>
        <table class="table table-bordered table-striped table-hover ">
          <thead>
          <tr>
            <th>Product Name</th>
            <th>Product details</th>
            <th>Quantity</th>
            <th>Unit Price</th>
            <th>Sub Total</th>
          </tr>
          </thead>
          <tbody>
          <% @ordered_items.each do |item| %>
            <tr>
              <td><%= item.product_variant.product.title %></td>
              <td><%= item.product_variant.details %></td>
              <td><%= item.quantity %></td>
              <td class="bdt">
                <%= formatted_price(item.price) %>
              </td>
              <td class="bdt">
                <%= formatted_price(item.subtotal) %>
              </td>
            </tr>
          <% end %>
          </tbody>

          <tfoot>
          <% if @order.coupon_discount %>
            <tr>
              <th colspan="4" class="right-text">Coupon Discount</th>
              <td class="center-text">
                <strong class="bdt">
                  <%= formatted_price(@order.coupon_discount) %>
                </strong>
              </td>
            </tr>
          <% end %>
          <tr>
            <th colspan="4" style="text-align: right">Total</th>
            <td style="text-align: center">
              <strong class="bdt"> <%= formatted_price(@order.total - @order.coupon_discount) %></strong>
            </td>
          </tr>
          </tfoot>

        </table>
      </div>
    </div>
  <% end %>
  <div class="margin-top-30 row print-cls">
    <div class="col-md-4"></div>
    <div class="col-md-4">
      <%= link_to 'Print bill', 'print-bill', :onclick => 'window.print();return false;', class: "btn btn-secondary", style: "width: 200px" %>
    </div>
    <div class="col-md-4"></div>
  </div>
</div>