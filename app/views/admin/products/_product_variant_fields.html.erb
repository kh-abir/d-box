
<div class="form-row">
  <div class="form-group col-md-12">
    <%= f.label :Details, class: "col-form-label-lg" %>
    <%= f.text_area :details, class: 'form-control' %>
  </div>
</div>

<div class="form-row">
  <div class="form-group col-md-3">
    <%= f.label :Price, class: "col-form-label-lg" %>
    <%= f.number_field :price, min: 1, class: 'form-control' %>
  </div>

  <div class="form-group col-md-3">
    <%= f.label :Purchase_price, class: "col-form-label-lg" %>
    <%= f.number_field :purchase_price, min: 1, class: 'form-control' %>
  </div>

  <div class="form-group col-md-3">
    <%= f.label :Stock_Quantity, class: "col-form-label-lg" %>
    <%= f.number_field :in_stock, min: 1, class: 'form-control' %>
  </div>

  <div class="form-group col-md-3">
    <%= f.label :featured, class: "col-form-label-lg" %><br />
    <%= f.radio_button(:featured, "yes") %>
    <%= label(:featured, "Yes") %>
    <%= f.radio_button(:featured, "no") %>
    <%= label(:featured, "No") %>
  </div>
</div>

<br>
<div class="form-row">
  <div class="form-group" style="display:flex; align-items: center">
    <strong> <%= f.label :upload_photo%>:</strong>
    <%= f.file_field :product_image %>
  </div>
</div>
<br>


