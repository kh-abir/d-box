<div class="content" align="center">
  <h1> <%= @product.sub_category.category.title %>/
    <%= @product.sub_category.title %>/
    <%= @product.title %>
  </h1>

  <table class="table table-bordered table-striped table-hover ">
    <thead class="thead-dark">
    <tr>
      <th>Product details</th>
      <th>In stock</th>
      <th>Purchase Price</th>
      <th>Selling Price</th>
      <th>Actions</th>
    </tr>
    </thead>

    <tbody>
    <% @product_variants.each do |product_variant| %>
      <tr>

        <td><%= product_variant.details %></td>
        <td><%= product_variant.in_stock %> </td>
        <td><%= number_to_currency product_variant.purchase_price %></td>
        <td><%= number_to_currency product_variant.price %></td>

        <td>
          <%= link_to admin_product_product_variant_path(@product, product_variant), class: "btn btn-warning" do %>
            <i class="far fa-eye" title="Show Variants"></i>
          <% end %>

          <%= link_to edit_admin_product_product_variant_path(@product, product_variant), class: "btn btn-info" do %>
            <i class="far fa-edit" title="Edit Variant"></i>
          <% end %>

          <%= link_to admin_product_product_variant_path(@product, product_variant), class: "btn btn-danger", method: :delete, data: {confirm: 'Are you sure?'} do %>
            <i class="far fa-trash-alt" title="Delete Variant"></i>
          <% end %>
        </td>

      </tr>
    <% end %>
    </tbody>

  </table>

  <%= link_to 'Create New Variant', new_admin_product_product_variant_path(@product), class: "btn btn-success float-right" %>


</div>