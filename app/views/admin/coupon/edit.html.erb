<div class="content">
  <div class="col-xl-12 col-xxl-12 col-lg-12 col-md-12">
    <div class="card" style="align-items: center">

      <%= form_for @coupon, url: admin_coupon_path, method: :patch do |f| %>
        <div class="form-row">
          <div class="form-group col-md-12">
            <%= f.label :code %>:
            <%= f.text_field :code,  min: 1, class: 'form-control' %>
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-12">
            <%= f.label :amount %>:
            <%= f.number_field :amount, min: 1, class: 'form-control' %>
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-12">
            <%= f.label :valid_from %>:
            <%= f.datetime_field :valid_from, class: 'form-control' %>
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-12">
            <%= f.label :valid_till %>:
            <%= f.datetime_field :valid_till, class: 'form-control'%>
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col-md-12">
            <%= f.submit 'Update Coupon', class: 'btn btn-info', style: 'width:100%;'%>
          </div>
          <div class="form-group col-md-12">
            <%= link_to  'Cancel', :back, class: 'btn btn-danger', style:'width:100%;'%>
          </div>
        </div>
    <% end %>
    </div>
  </div>
</div>

