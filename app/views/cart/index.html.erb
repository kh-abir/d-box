<div class="container">
  <% if @ordered_items.count == 0 %>
    <h3 class="center-text">Your Cart is empty!</h3>
  <% else %>
    <h2 class="center-text">Current Cart</h2>
    <table class="table table-bordered table-striped table-hover">
      <thead>
      <tr>
        <th>Thumbnail</th>
        <th>Detail</th>
        <th><small><b>Quantity</b><br><i>(Click to update)</i></small></th>
        <th>Price</th>
        <th>Sub Total</th>
        <th>Action</th>
      </tr>
      </thead>
      <tbody>
      <% @ordered_items.each do |item| %>
        <tr>
          <% if item.product_variant.product_images.attached? %>
            <td><%= image_tag item.product_variant.product_images.first, class: 'circular-image float_center' %></td>
          <% else %>
            <td><small class="circular-image float_center">Image not found</small></td>
          <% end %>
          <td><%= item.product_variant.details %></td>
          <td class="cart_quantity " stock="<%= item.product_variant.in_stock %>" id="<%= item.id %>"><%= item.quantity %></td>
          <td>
            <% if item.product_variant.final_price %>
              <s class="dollars"><%= formatted_price(item.product_variant.price) %></s>
              <div class="cart_price avoid_line_break dollars" value="<%= item.price %>">
                <%= formatted_price(item.price) %>
              </div>
            <% else %>
              <div class="cart_price avoid_line_break dollars" value="<%= item.price %>">
                <%= formatted_price(item.price) %>
              </div>
            <% end %>
          </td>
          <td class="sub_total_price dollars"><%= formatted_price(item.subtotal) %></td>
          <td>
            <%= link_to item, method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-danger" do %>
              <i class="far fa-trash-alt"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
      </tbody>

      <tfoot>
      <tr style="background-color: #9bbfba;">
        <th colspan="4" class="right-text">Total</th>
        <td class="grand_total center-text" value="<%= current_order.total %>">
          <strong class="dollars"><%= formatted_price(current_order.total) %></strong>
        </td>
        <td style="border-left-style: hidden;"></td>
      </tr>
      <tr style="border: hidden">
        <th colspan="4"></th>
        <td colspan="2" style="border: hidden">
          <div class="coupon">
            <small><i> Have any voucher?</i></small><br>
            <div class="input-group mb-3 input-group-sm">
              <input id="coupon" placeholder="Enter Code..." class="form-control" style="width:50%;" type="text" name="coupon[code]">
              <div class="input-group-append">
                <button class="btn btn-primary" type="button">Apply</button>
                <button class="btn btn-danger" type="button">Cancel</button>
              </div>
            </div>
          </div>
        </td>
      </tr>
      </tfoot>

    </table>
    <%= link_to 'Proceed to Checkout', new_order_path, class: "btn btn-warning" %>
  <% end %>
</div>