<br>

<table class="table table-bordered table-striped table-hover ">
  <thead class="thead-dark">
  <tr>
    <th>Product name</th>
    <th>Variant details</th>
    <th>Variant price</th>
    <th>In stock</th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @product_variants.each do |p_variant| %>
    <tr>
      <td><%= link_to p_variant.product.title, p_variant %></td>
      <td><%= link_to p_variant.details, p_variant %></td>
      <td><%= link_to number_to_currency(p_variant.price), p_variant %></td>
      <td><%= link_to p_variant.in_stock %></td>

      <td>
        <%= form_with model: @ordered_item do |f| %>
          <%= f.hidden_field :product_variant_id, value: p_variant.id %>
          <%= f.hidden_field :price, value: p_variant.price %>
          <%= f.hidden_field :purchase_price, value: p_variant.purchase_price %>
          <%= f.number_field :quantity,value: nil, min: 1, max: p_variant.in_stock, style: 'width: 50%;', placeholder: 'Select amount' %>
          <%= f.submit "Add To Cart", class: "btn btn-success" %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>

</table>

<br><br>
<%= link_to 'Back', root_path, class: "btn btn-info" %><br> <br>





