<div class="container" align="center"><br>

  <div class="row">
    <% @products.each do |product| %>
      <div class="col-md-2 col-sm-4">
        <div class="product-grid2">
          <%= link_to product_product_variant_path(product, product.product_variants.first) do %>
            <div class="product-image2">
              <%= image_tag ("mobile_demo.jpg"), class: "pic-1" %>
            </div>
            <div class="product-content">
              <p class="title"><%= product.title.truncate(25, separator: /\s/) %></p>
              <% if product.has_valid_discount %>
                <s><span class="bdt">
                  <%= product.product_variants.first.price %>
                </span></s>
                <div class="price">
                  <span class="bdt">
                    <%= product.discount_price(product.product_variants.first) %>
                  </span>
                </div>
              <% elsif product.category.has_valid_discount %>
                <s><span class="bdt">
                  <%= product.product_variants.first.price %>
                </span></s>
                <div class="price">
                  <span class="bdt">
                    <%= product.category.discount_price(product.product_variants.first) %>
                  </span>
                </div>
              <% else %>
                <span class="price bdt">
                  <%= product.product_variants.first.price %>
                </span>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <hr>
  </div>
</div>
