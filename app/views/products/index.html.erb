<br>

<table class="table table-bordered table-striped table-hover ">
  <thead class="thead-dark" >
  <tr>
    <th>Product name</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @products.each do |product| %>
    <tr>
      <td><%= link_to product.title, product %></td>
      <td><%= link_to 'Edit', edit_product_path(product), class: "btn btn-secondary float-right" %></td>
      <td><%= link_to 'Delete', product_path(product), class: "btn btn-danger float-right", method: :delete, data: {confirm: 'Are you sure?'} %> </td>
    </tr>
  <% end %>
  </tbody>
</table>

<br><br>
<%= link_to 'Back', :back,  class: "btn btn-info" %><br>
