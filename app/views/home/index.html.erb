<div class="row">
  <div class="col-lg-2">
  </div>
  <div class="col-lg-10">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <% @banners.each do |banner| %>
          <li data-target="#carouselExampleIndicators"></li>
        <% end %>
      </ol>
      <div class="carousel-inner">
        <% @banners.each do |banner| %>
          <% if banner == @banners.first %>
            <div class="carousel-item active">
          <% else %>
            <div class="carousel-item">
          <% end %>
          <% if banner.link_type === "product" %>
            <%= link_to product_product_variant_path(:id => banner.get_product_variant(banner.link_id), :product_id => banner.link_id) do %>
              <%= image_tag(banner.banner_image.attached? ? banner.banner_image : 'image-not-found.png', width: "100%", height: '350px') %>
            <% end %>
          <% elsif banner.link_type === "sub_category" %>
            <%= link_to sub_category_products_path(:sub_category_id => banner.link_id) do %>
              <%= image_tag(banner.banner_image.attached? ? banner.banner_image : 'image-not-found.png', width: "100%", height: '350px') %>
            <% end %>
          <% elsif banner.link_type === "category" %>
            <%= link_to category_products_path(:category_id => banner.link_id) do %>
              <%= image_tag(banner.banner_image.attached? ? banner.banner_image : 'image-not-found.png', width: "100%", height: '350px') %>
            <% end %>
          <% else %>
            <%= image_tag(banner.banner_image.attached? ? banner.banner_image : 'image-not-found.png', width: "100%", height: '350px') %>
          <% end %>
          <% if banner == @banners.first %>
            </div>
          <% else %>
            </div>
          <% end %>
        <% end %>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
</div>

<div class="container">
</div>

<div class="container">
  <h3 style="text-align: center">Our Product Categories</h3> <br>
  <div class="row">
    <% @categories.each do |category| %>
      <div class="col-md-4 col-center">
        <div class="categories-button">
          <%= link_to category_products_path(category) do %>
            <div class="row">
              <div class="col-md-10">
                <h6><strong><%= category.title %></strong></h6>
              </div>
              <div class="col-md-2">
                <%= image_tag(category.category_icon.attached? ? category.category_icon : 'image-not-found.png') %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="container">
  <h3 style="text-align: center">Top Grossing Products</h3> <br>
  <div class="row">
    <% @this_month_top_six_product.each do |variant| %>
      <% product_variant = ProductVariant.get_product_variant(variant.first) %>
      <div class="col-md-2 col-sm-4">
        <div class="product-grid2">
          <%= link_to product_product_variant_path(product_variant.product, product_variant) do %>
            <div class="product-image2">
              <%= image_tag(product_variant.product.brand_image.attached? ? product_variant.product.brand_image : 'image-not-found.png') %>
            </div>
            <div class="product-content">
              <p class="title"><%= product_variant.product.title.truncate(25, separator: /\s/) %></p>
              <% if product_variant.product.has_valid('Discount') %>
                <s><span class="dollars">
                  <%= formatted_price(product_variant.price) %>
                </span></s>
                <br>
                <span class="price">
                  <span class="dollars">
                    <%= formatted_price(product_variant.product.discount_price(product_variant)) %>
                  </span>
                </span>
              <% elsif product_variant.product.category.has_valid('Discount') %>
                <s><span class="dollars">
                  <%= formatted_price(product_variant.price) %>
                </span></s>
                <br>
                <span class="price">
                  <span class="dollars">
                    <%= formatted_price(product_variant.product.category.discount_price(product_variant)) %>
                  </span>
                </span>
              <% else %>
                <span class="price dollars">
                  <%= formatted_price(product_variant.price) %>
                </span>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="container">
  <h3 style="text-align: center">Featured Products</h3> <br>
  <div class="row">
    <% @categories.each do |category| %>
      <% category.products.each do |product| %>
        <% product.product_variants.each do |variant| %>
          <% if variant.featured == "yes" %>
            <div class="col-md-2 col-sm-4">
              <div class="product-grid2">
                <%= link_to product_product_variant_path(product, variant) do %>
                  <div class="product-image2">
                    <%= image_tag(product.brand_image.attached? ? product.brand_image : 'image-not-found.png') %>
                  </div>
                  <div class="product-content">
                    <p class="title"><%= product.title.truncate(25, separator: /\s/) %></p>
                    <% if product.has_valid('Discount') %>
                      <s><span class="dollars">
                          <%= formatted_price(variant.price) %>
                      </span></s>
                      <br>
                      <span class="price">
                        <span class="dollars">
                          <%= formatted_price(product.discount_price(variant)) %>
                        </span>
                      </span>
                    <% elsif category.has_valid('Discount') %>
                      <s><span class="dollars">
                        <%= formatted_price(variant.price) %>
                      </span></s>
                      <br>
                      <span class="price">
                        <span class="dollars">
                          <%= formatted_price(category.discount_price(variant)) %>
                        </span>
                      </span>
                    <% else %>
                      <span class="price dollars">
                        <%= formatted_price(variant.price) %>
                      </span>
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>