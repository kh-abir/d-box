<div class="container">
  <h2 style="text-align: center">Edit Profile</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="row margin-top-30">
      <div class="col-md-1"></div>
      <div class="col-md-4">
        <br>
        <div class="field">
          <%= image_tag(resource.avatar_thumbnail) %>
        </div>
        <div class="field">
          <%= f.file_field :avatar, class: 'form-control' %>
        </div>

        <br>
        <h3>Delete my account</h3>
        <p>Unhappy? <%= link_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %></p>
      </div>
      <div class="col-md-1"></div>
      <div class="col-md-5 form">
        <div class="field">
          <b><%= f.label :first_name %><br /></b>
          <%= f.text_field :first_name, autofocus: true, autocomplete: "name", class: 'form-control' %>
        </div>
        <div class="field">
          <b><%= f.label :last_name %><br /></b>
          <%= f.text_field :last_name, autofocus: true, autocomplete: "name", class: 'form-control' %>
        </div>

        <div class="field">
          <b><%= f.label :email %><br /></b>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
        </div>

        <div class="field">
          <b><%= f.label :Phone %></b> <br>
          <%= f.text_field :contact, autofocus: true, class: 'form-control' %>
        </div>

        <div class="field">
          <b><%= f.label :Address %></b> <br>
          <%= f.text_field :address, autofocus: true, class: 'form-control'%>
        </div>

        <div class="field">
          <b><%= f.label :gender %><br /></b>
          <%= f.radio_button(:gender, "male") %>
          <%= label(:gender, "Male") %> &nbsp &nbsp
          <%= f.radio_button(:gender, "female") %>
          <%= label(:gender, "Female") %> &nbsp &nbsp
          <%= f.radio_button(:gender, "other") %>
          <%= label(:gender, "Other") %>
        </div>


        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field">
          <b><%= f.label :password %></b> <i>(leave blank if you don't want to change it)</i><br />
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
          <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </div>

        <div class="field">
          <b><%= f.label :password_confirmation %><br /></b>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
        </div>

        <div class="field">
          <b><%= f.label :current_password %></b> <i>(we need your current password to confirm your changes)</i><br />
          <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control' %>
        </div>
        <br>
        <div class="actions">
          <%= f.submit "Update", class:"btn btn-success form-control" %>
        </div>

      </div>
    </div>
  <% end %>
</div>

