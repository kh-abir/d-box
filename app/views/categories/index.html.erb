

<table class="table table-bordered table-striped table-hover ">
  <thead class="thead-dark" >
  <tr>
    <th>Category name</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @categories.each do |category| %>
    <tr>
      <td><%= link_to category.title, category %></td>
      <td><%= link_to 'Edit', edit_category_path(category), class: "btn btn-secondary float-right" %></td>
      <td><%= link_to 'Delete', category_path(category), class: "btn btn-danger float-right", method: :delete, data: {confirm: 'Are you sure?'} %> </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'Create New Category', new_category_path, class: "btn btn-success float-right" %> <br><br>
<%= link_to 'Back', root_path,  class: "btn btn-info" %><br> <br>
<%= link_to 'Create Product', new_product_path,  class: "btn btn-primary" %>
<%= link_to 'Create Product variants', new_product_variant_path,  class: "btn btn-success" %>
<%= link_to 'Create Sub-category', new_sub_category_path,  class: "btn btn-secondary" %>